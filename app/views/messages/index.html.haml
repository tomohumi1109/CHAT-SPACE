.wrapper
  = render 'shared/side_bar'
  .light-content
    .light-header
      .current-group
        %h2.current-group__name  
          aaa
        %ul.current-group__list  
          Member:
          %li.current-group__member  
          a
      .light-header__edit-btn 
        Edit

    .messages
      = render "massages"

    .form
      .input-box
        %input.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}/
        %label.image-label{for: "message_image"}
          %i.fa.fa-image
        %input.input-box__submit-btn{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}/
